{
  "docker": {
    "packageRules": [
      {
        "packageNames": ["circleci/node", "node"],
        "allowedVersions": "<11 || >11"
      },
      {
        "packagePatterns": ["circleci/.+"],
        "recreateClosed": true
      },
      {
        "packageNames": ["circleci/python", "python"],
        "allowedVersions": "<=3.7"
      },
      {
        "packageNames": ["traefik"],
        "allowedVersions": "<=1.7"
      }
    ],
    "pinDigests": true,
    "pin": {
      "automerge": true
    }
  },
  "extends": [
    "config:base",
    "default:automergeDigest",
    "docker:enableMajor"
  ],
  "labels": ["renovate"],
  "packageRules": [
    {
      "automerge": true,
      "depTypeList": ["devDependencies"]
    }
  ],
  "pip_requirements": {
    "fileMatch": ["(^|/)requirements(\/*[\\w-]*).(txt|pip)$"]
  },
  "rebaseStalePrs": false,
  "schedule": ["after 8:00 before 20:00 every weekday"],
  "timezone": "Europe/Berlin"
}
